<!DOCTYPE html>
<html>
  <head>
    <title>Stethoscope</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class='static-body'>
    <div class='static-top-container'>
      <section class='static-site-name'>
        <%= link_to "Stethoscope", doctors_path %>
      </section>
      <% if logged_in? %>
        <section class='static-site-logout'>
          <%= link_to "Log out", logout_path, method: "delete" %>
        </section>
        <section class='static-site-user'>
          <%= link_to "Profile", user_path(@current_user) %>
        </section>
      <% else %>
        <section class='static-site-login'>
          <%= link_to "Log in", login_path %>
        </section>
      <% end %>
      <div class='static-search-bar'>
        <%= form_tag doctors_path, :method => 'get' do %>
          <span>
            <%= text_field_tag :search, params[:search], placeholder: "Search Doctor or Title" %>
            <%= submit_tag "Find a Doctor", :name => nil, :id => 'button' %>
          </span>
        <% end %>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
