<h2>Log In</h2>

<% flash.each do |key, value| %>
  <%= content_tag(:div, class: "alert alert-#{key}") do %>
    <%= value %>
  <% end %>
<% end %><br>

<%= form_for :session, url: login_path do |f| %>
  <%= f.label :email %>:<br>
  <%= f.email_field :email %><br><br>

  <%= f.label :password %>:<br>
  <%= f.password_field :password %><br><br>

  <%= f.submit "Enter Site" %><br><br>
<% end %>
